<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field-box">
    <%= f.text_field :name, autocomplete: "name", placeholder: "Name", class: "field" %>
  </div>

  <div class="field-box">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "field" %>
  </div>

  <div class="field-box">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "field" %>
  </div>

  <div class="field-box">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm", class: "field" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-font' %>
    <%= link_to "Log in", new_user_session_path, class: 'btn' %><br />
    </div>
    <%= render "users/shared/links" %>

<% end %>


